<div class="container mt-4">
    <div class="row">
        <!-- Perfil do Colunista -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <% if (columnist.photo) { %>
                        <img src="<%= columnist.photo %>" class="rounded-circle mb-3" 
                             style="width: 150px; height: 150px; object-fit: cover;" 
                             alt="<%= columnist.name %>">
                    <% } else { %>
                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto mb-3" 
                             style="width: 150px; height: 150px;">
                            <i class="fas fa-user fa-4x text-muted"></i>
                        </div>
                    <% } %>
                    
                    <h3><%= columnist.name %></h3>
                    <p class="text-muted"><%= columnist.category %></p>
                    
                    <% if (columnist.bio) { %>
                        <p class="card-text"><%= columnist.bio %></p>
                    <% } %>
                    
                    <% if (columnist.email) { %>
                        <p><i class="fas fa-envelope"></i> <%= columnist.email %></p>
                    <% } %>
                    
                    <% if (columnist.socialMedia && Object.keys(columnist.socialMedia).length > 0) { %>
                        <div class="mb-3">
                            <h6>Redes Sociais</h6>
                            <% Object.entries(columnist.socialMedia).forEach(([platform, url]) => { %>
                                <% if (url) { %>
                                    <a href="<%= url %>" target="_blank" class="btn btn-outline-primary btn-sm me-1 mb-1">
                                        <i class="fab fa-<%= platform %>"></i> <%= platform.charAt(0).toUpperCase() + platform.slice(1) %>
                                    </a>
                                <% } %>
                            <% }) %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Artigos do Colunista -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Artigos de <%= columnist.name %></h4>
                    <% if (columnist.articles && columnist.articles.length > 0) { %>
                        <span class="badge bg-primary"><%= columnist.articles.length %> artigos</span>
                    <% } %>
                </div>
                <div class="card-body">
                    <% if (!columnist.articles || columnist.articles.length === 0) { %>
                        <div class="alert alert-info">
                            Nenhum artigo publicado ainda.
                        </div>
                    <% } else { %>
                        <div class="row">
                            <% columnist.articles.forEach(article => { %>
                                <div class="col-12 mb-4">
                                    <div class="card border-0 bg-light">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <a href="/article/<%= article.slug %>" class="text-decoration-none">
                                                    <%= article.title %>
                                                </a>
                                            </h5>
                                            <p class="card-text text-muted">
                                                <%= article.excerpt ? article.excerpt.substring(0, 150) + '...' : article.content.substring(0, 150) + '...' %>
                                            </p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">
                                                    <%= moment(article.createdAt).format('DD/MM/YYYY [Ã s] HH:mm') %>
                                                </small>
                                                <div>
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-eye"></i> <%= article.views || 0 %>
                                                    </span>
                                                    <a href="/article/<%= article.slug %>" class="btn btn-outline-primary btn-sm ms-2">
                                                        Ler Mais
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
