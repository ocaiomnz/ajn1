<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <div class="hero-content">
            <!-- Main Article -->
            <% if (typeof mainArticle !=='undefined' && mainArticle) { %>
                <article class="main-article animated">
                    <div class="article-image">
                        <% if (mainArticle.image) { %>
                            <img src="<%= mainArticle.image %>" alt="<%= mainArticle.title %>"
                                style="width:100%; height:100%; object-fit:cover;">
                            <% } else { %>
                                <i class="fas fa-landmark"></i>
                                <% } %>
                    </div>
                    <div class="article-content">
                        <% if (mainArticle.Category) { %>
                            <span class="article-category">
                                <%= mainArticle.Category.name.toUpperCase() %>
                            </span>
                            <% } %>
                                <h1 class="article-title">
                                    <%= mainArticle.title %>
                                </h1>
                                <p class="article-excerpt">
                                    <%= mainArticle.excerpt %>
                                </p>
                                <a href="/article/<%= mainArticle.slug %>" class="read-more">
                                    Leia na íntegra
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                    </div>
                </article>
                <% } %>

                    <!-- Sidebar -->
                    <aside class="sidebar">
                        <!-- Anúncio na Sidebar -->
                        <% if (typeof sidebarAds !=='undefined' && sidebarAds.length> 0) { %>
                            <% sidebarAds.forEach(ad=> { %>
                                <div class="latest-news animated">
                                    <div class="ad-card">
                                        <span class="ad-label">
                                            <%= ad.label || 'PUBLICIDADE' %>
                                        </span>
                                        <div class="ad-content">
                                            <% if (ad.icon) { %>
                                                <i class="<%= ad.icon %>"></i>
                                                <% } %>
                                                    <h3>
                                                        <%= ad.title %>
                                                    </h3>
                                                    <p>
                                                        <%= ad.content %>
                                                    </p>
                                        </div>
                                        <a href="<%= ad.link %>" class="ad-button">Confira</a>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } %>

                                        <div class="latest-news animated">
                                            <h2 class="section-title">ÚLTIMAS NOTÍCIAS</h2>

                                            <% if (typeof latestNews !=='undefined' && latestNews.length> 0) { %>
                                                <% latestNews.forEach(news=> { %>
                                                    <div class="news-item">
                                                        <div class="news-date">
                                                            <span class="date-day">
                                                                <%= formatDateDay(news.createdAt) %>
                                                            </span>
                                                            <span class="date-month">
                                                                <%= formatDateMonth(news.createdAt) %>
                                                            </span>
                                                        </div>
                                                        <div class="news-content">
                                                            <h3>
                                                                <%= news.title %>
                                                            </h3>
                                                            <p>
                                                                <%= news.excerpt ? news.excerpt.substring(0, 100)
                                                                    + '...' : '' %>
                                                            </p>
                                                            <a href="/article/<%= news.slug %>" class="news-link">Leia
                                                                mais <i class="fas fa-chevron-right"></i></a>
                                                        </div>
                                                    </div>
                                                    <% }); %>
                                                        <% } %>
                                        </div>

                                        <div class="latest-news animated">
                                            <h2 class="section-title">CLASSIFICADOS</h2>
                                            <div class="news-item">
                                                <div class="news-content">
                                                    <h3>Encontre oportunidades em Aracaju</h3>
                                                    <p>Confira os melhores classificados da região para empregos,
                                                        imóveis, serviços e muito mais.</p>
                                                    <a href="https://ajn1.com.br/classificados" target="_blank"
                                                        class="news-link">Acesse classificados <i
                                                            class="fas fa-external-link-alt"></i></a>
                                                </div>
                                            </div>
                                        </div>
                    </aside>
        </div>
    </div>
</section>

