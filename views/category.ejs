<section class="hero">
    <div class="container">
        <div class="page-header">
            <h1 class="page-title">Categoria: <%= category.name %>
            </h1>
        </div>

        <div class="hero-content">
            <!-- Main Content: Articles List -->
            <div class="articles-list" style="flex: 2;">
                <% if (articles.length> 0) { %>
                    <div class="grid-articles">
                        <% articles.forEach(article=> { %>
                            <article class="news-card animated">
                                <div class="news-image">
                                    <% if (article.image) { %>
                                        <img src="<%= article.image %>" alt="<%= article.title %>" 
                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                        <div class="placeholder-image" style="display: none;">
                                            <i class="fas fa-newspaper"></i>
                                        </div>
                                    <% } else { %>
                                        <div class="placeholder-image">
                                            <i class="fas fa-newspaper"></i>
                                        </div>
                                    <% } %>
                                    <span class="category-tag">
                                        <%= article.Category.name %>
                                    </span>
                                </div>
                                <div class="news-content">
                                    <div class="news-meta">
                                        <span class="date">
                                            <%= formatDateDay(article.createdAt) %>
                                                <%= formatDateMonth(article.createdAt) %>
                                        </span>
                                    </div>
                                    <h3><a href="/article/<%= article.slug %>">
                                            <%= article.title %>
                                        </a></h3>
                                    <p>
                                        <%= article.excerpt ? article.excerpt.substring(0, 100) + '...' : '' %>
                                    </p>
                                </div>
                            </article>
                            <% }); %>
                    </div>
                    <% } else { %>
                        <p>Nenhuma notícia encontrada nesta categoria.</p>
                        <% } %>
            </div>

            <!-- Sidebar -->
            <aside class="sidebar">
                <% if (typeof sidebarAds !=='undefined' && sidebarAds.length> 0) { %>
                    <% sidebarAds.forEach(ad=> { %>
                        <div class="latest-news animated">
                            <div class="ad-card">
                                <span class="ad-label">
                                    <%= ad.label || 'PUBLICIDADE' %>
                                </span>
                                <div class="ad-content">
                                    <% if (ad.type==='image' && ad.image) { %>
                                        <img src="<%= ad.image %>" alt="<%= ad.title %>"
                                            style="width:100%; border-radius: 8px;">
                                        <% } else { %>
                                            <% if (ad.icon) { %>
                                                <i class="<%= ad.icon %>"></i>
                                                <% } %>
                                                    <h3>
                                                        <%= ad.title %>
                                                    </h3>
                                                    <p>
                                                        <%= ad.content %>
                                                    </p>
                                                    <% } %>
                                </div>
                                <a href="<%= ad.link %>" class="ad-button">Confira</a>
                            </div>
                        </div>
                        <% }); %>
                            <% } %>

                                <div class="latest-news animated">
                                    <h2 class="section-title">ÚLTIMAS NOTÍCIAS</h2>
                                    <% if (typeof latestNews !=='undefined' && latestNews.length> 0) { %>
                                        <% latestNews.forEach(news=> { %>
                                            <div class="news-item">
                                                <div class="news-date">
                                                    <span class="date-day">
                                                        <%= formatDateDay(news.createdAt) %>
                                                    </span>
                                                    <span class="date-month">
                                                        <%= formatDateMonth(news.createdAt) %>
                                                    </span>
                                                </div>
                                                <div class="news-content">
                                                    <h3><a href="/article/<%= news.slug %>" class="news-link">
                                                            <%= news.title %>
                                                        </a></h3>
                                                </div>
                                            </div>
                                            <% }); %>
                                                <% } %>
                                </div>
            </aside>
        </div>
    </div>
</section>

<style>
    .hero-content {
        display: flex;
        gap: 30px;
        margin-top: 30px;
    }

    .articles-list {
        flex: 2;
    }

    .sidebar {
        flex: 1;
        min-width: 300px;
    }

    .grid-articles {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 25px;
    }

    .news-card {
        background: var(--white);
        border-radius: var(--border-radius);
        overflow: hidden;
        box-shadow: var(--shadow-md);
        transition: var(--transition);
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .news-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-lg);
    }

    .news-image {
        position: relative;
        height: 200px;
        overflow: hidden;
    }

    .news-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: var(--transition);
    }

    .news-card:hover .news-image img {
        transform: scale(1.05);
    }

    .placeholder-image {
        width: 100%;
        height: 200px;
        background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e1 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: #94a3b8;
    }

    .category-tag {
        position: absolute;
        top: 15px;
        left: 15px;
        background: var(--primary-blue);
        color: var(--white);
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .news-content {
        padding: 20px;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .news-meta {
        margin-bottom: 10px;
    }

    .news-meta .date {
        color: var(--text-light);
        font-size: 0.875rem;
        font-weight: 500;
    }

    .news-content h3 {
        margin-bottom: 12px;
        line-height: 1.3;
    }

    .news-content h3 a {
        color: var(--text-dark);
        text-decoration: none;
        font-weight: 600;
        font-size: 1.1rem;
        transition: var(--transition);
    }

    .news-content h3 a:hover {
        color: var(--primary-blue);
    }

    .news-content p {
        color: var(--text-light);
        line-height: 1.5;
        flex: 1;
        margin: 0;
    }

    .page-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 10px;
        position: relative;
        display: inline-block;
    }

    .page-title::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 4px;
        background: var(--accent-blue);
        border-radius: 2px;
    }

    /* Responsividade */
    @media (max-width: 768px) {
        .hero-content {
            flex-direction: column;
            gap: 20px;
        }

        .grid-articles {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .page-title {
            font-size: 2rem;
        }

        .sidebar {
            min-width: 100%;
        }
    }

    @media (max-width: 480px) {
        .news-content {
            padding: 15px;
        }

        .news-content h3 a {
            font-size: 1rem;
        }

        .category-tag {
            font-size: 0.7rem;
            padding: 4px 10px;
        }
    }
</style>