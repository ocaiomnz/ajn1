<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3><%= classified ? 'Editar Anúncio' : 'Novo Anúncio' %></h3>
                </div>
                <div class="card-body">
                    <form method="POST" action="<%= action %>" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="title" class="form-label">Título *</label>
                                <input type="text" class="form-control" id="title" name="title" 
                                       value="<%= classified ? classified.title : '' %>" required>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label for="category" class="form-label">Categoria *</label>
                                <select class="form-select" id="category" name="category" required>
                                    <option value="">Selecione...</option>
                                    <option value="imoveis" <%= classified && classified.category === 'imoveis' ? 'selected' : '' %>>Imóveis</option>
                                    <option value="veiculos" <%= classified && classified.category === 'veiculos' ? 'selected' : '' %>>Veículos</option>
                                    <option value="empregos" <%= classified && classified.category === 'empregos' ? 'selected' : '' %>>Empregos</option>
                                    <option value="eletronicos" <%= classified && classified.category === 'eletronicos' ? 'selected' : '' %>>Eletrônicos</option>
                                    <option value="moveis" <%= classified && classified.category === 'moveis' ? 'selected' : '' %>>Móveis</option>
                                    <option value="servicos" <%= classified && classified.category === 'servicos' ? 'selected' : '' %>>Serviços</option>
                                    <option value="outros" <%= classified && classified.category === 'outros' ? 'selected' : '' %>>Outros</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="price" class="form-label">Preço</label>
                                <input type="number" class="form-control" id="price" name="price" 
                                       value="<%= classified ? classified.price : '' %>" step="0.01" min="0">
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label for="featured" class="form-label">Destaque?</label>
                                <div class="form-check mt-2">
                                    <input class="form-check-input" type="checkbox" id="featured" name="featured" 
                                           <%= classified && classified.featured ? 'checked' : '' %>>
                                    <label class="form-check-label" for="featured">
                                        Sim (anúncio em destaque)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Descrição *</label>
                            <textarea class="form-control" id="description" name="description" rows="4" required><%= classified ? classified.description : '' %></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="contactName" class="form-label">Nome Contato *</label>
                                <input type="text" class="form-control" id="contactName" name="contactName" 
                                       value="<%= classified ? classified.contactName : '' %>" required>
                            </div>
                            
                            <div class="col-md-4 mb-3">
                                <label for="contactPhone" class="form-label">Telefone *</label>
                                <input type="text" class="form-control" id="contactPhone" name="contactPhone" 
                                       value="<%= classified ? classified.contactPhone : '' %>" required>
                            </div>
                            
                            <div class="col-md-4 mb-3">
                                <label for="contactEmail" class="form-label">E-mail</label>
                                <input type="email" class="form-control" id="contactEmail" name="contactEmail" 
                                       value="<%= classified ? classified.contactEmail : '' %>">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="images" class="form-label">Imagens (máx. 5)</label>
                            <input type="file" class="form-control" id="images" name="images" multiple accept="image/*">
                            <div class="form-text">Formatos aceitos: JPG, PNG, GIF. Máximo 5 imagens.</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/classificados" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> <%= classified ? 'Atualizar' : 'Publicar' %> Anúncio
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
