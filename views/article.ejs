<section class="hero">
    <div class="container">
        <div class="hero-content">
            <!-- Main Content -->
            <article class="main-article animated">
                <div class="article-image">
                    <% if (article.image) { %>
                        <img src="<%= article.image %>" alt="<%= article.title %>"
                            style="width:100%; height:100%; object-fit:cover;">
                        <% } else { %>
                            <i class="fas fa-newspaper"></i>
                            <% } %>
                </div>
                <div class="article-content">
                    <% if (article.Category) { %>
                        <span class="article-category">
                            <%= article.Category.name.toUpperCase() %>
                        </span>
                        <% } %>
                            <h1 class="article-title">
                                <%= article.title %>
                            </h1>
                            <div class="article-meta"
                                style="color: var(--text-light); margin-bottom: 1rem; font-size: 0.9rem;">
                                <span style="margin-right: 15px;"><i class="far fa-calendar"></i>
                                    <%= formatDateDay(article.createdAt) %>
                                        <%= formatDateMonth(article.createdAt) %>
                                </span>
                                <% if (article.views) { %>
                                    <span><i class="far fa-eye"></i>
                                        <%= article.views %> visualizações
                                    </span>
                                    <% } %>
                            </div>
                            <div class="article-body">
                                <%- article.content %>
                            </div>
                            <br>
                            <a href="/" class="read-more" style="background-color: var(--text-light);">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                </div>
            </article>

            <!-- Sidebar -->
            <aside class="sidebar">
                <% if (typeof sidebarAds !=='undefined' && sidebarAds.length> 0) { %>
                    <% sidebarAds.forEach(ad=> { %>
                        <div class="latest-news animated">
                            <div class="ad-card">
                                <span class="ad-label">
                                    <%= ad.label || 'PUBLICIDADE' %>
                                </span>
                                <div class="ad-content">
                                    <% if (ad.icon) { %>
                                        <i class="<%= ad.icon %>"></i>
                                        <% } %>
                                            <h3>
                                                <%= ad.title %>
                                            </h3>
                                            <p>
                                                <%= ad.content %>
                                            </p>
                                </div>
                                <a href="<%= ad.link %>" class="ad-button">Confira</a>
                            </div>
                        </div>
                        <% }); %>
                            <% } %>

                                <div class="latest-news animated">
                                    <h2 class="section-title">ÚLTIMAS NOTÍCIAS</h2>
                                    <% if (typeof latestNews !=='undefined' && latestNews.length> 0) { %>
                                        <% latestNews.forEach(news=> { %>
                                            <div class="news-item">
                                                <div class="news-date">
                                                    <span class="date-day">
                                                        <%= formatDateDay(news.createdAt) %>
                                                    </span>
                                                    <span class="date-month">
                                                        <%= formatDateMonth(news.createdAt) %>
                                                    </span>
                                                </div>
                                                <div class="news-content">
                                                    <h3>
                                                        <%= news.title %>
                                                    </h3>
                                                    <p>
                                                        <%= news.excerpt ? news.excerpt.substring(0, 100) + '...' : ''
                                                            %>
                                                    </p>
                                                    <a href="/article/<%= news.slug %>" class="news-link">Leia mais <i
                                                            class="fas fa-chevron-right"></i></a>
                                                </div>
                                            </div>
                                            <% }); %>
                                                <% } %>
                                </div>
            </aside>
        </div>
    </div>
</section>